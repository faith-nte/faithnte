---
export interface Props {
  id: string;
  title: string;
  slug: string;
  excerpt: string;
  author: string;
  publishedAt: string;
  tags: string[];
  featured?: boolean;
  coverImage?: string;
}

const { title, slug, excerpt, author, publishedAt, tags, featured, coverImage } = Astro.props;

const formatDate = (date: string) => {
  return new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<article class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-neutral-100">
  {coverImage && (
    <div class="aspect-w-16 aspect-h-9">
      <img 
        src={coverImage} 
        alt={title}
        class="w-full h-48 object-cover"
      />
    </div>
  )}
  
  <div class="p-6">
    {featured && (
      <span class="inline-block bg-gradient-to-r from-neutral-100 to-stone-100 text-neutral-800 text-xs font-semibold px-3 py-1 rounded-full mb-3">
        Featured
      </span>
    )}
    
    <h2 class="text-xl font-bold text-black mb-3 hover:text-neutral-700 transition-colors">
      <a href={`/blog/${slug}`}>
        {title}
      </a>
    </h2>
    
    <p class="text-neutral-600 mb-4 line-clamp-3 leading-relaxed">
      {excerpt}
    </p>
    
    <div class="flex items-center justify-between text-sm text-neutral-500 mb-4">
      <div class="flex items-center space-x-2">
        <span class="font-medium text-neutral-600">By {author}</span>
        <span>â€¢</span>
        <time dateTime={publishedAt}>
          {formatDate(publishedAt)}
        </time>
      </div>
    </div>
    
    {tags && tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-4">
        {tags.map((tag) => (
          <a 
            href={`/blog/tags/${tag}`}
            class="inline-block bg-neutral-100 text-neutral-600 text-xs px-3 py-1 rounded-full hover:bg-neutral-200 hover:text-black transition-colors"
          >
            #{tag}
          </a>
        ))}
      </div>
    )}
    
    <div class="pt-4 border-t border-neutral-100">
      <a 
        href={`/blog/${slug}`}
        class="inline-flex items-center text-neutral-700 hover:text-black font-medium text-sm group"
      >
        Read more
        <svg class="ml-1 w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</article>
